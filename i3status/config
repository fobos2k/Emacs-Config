general {
        colors = true
        interval = 5
        output_format = i3bar
}

# order += "ipv6"
order += "read_file WEATHER"
order += "wireless _first_"
order += "ethernet _first_"
order += "cpu_temperature 0"
order += "battery 0"
order += "load"
order += "memory"
order += "disk /"
order += "tztime local"

wireless _first_ {
        format_up = "%essid: %quality (%ip)"
        format_down = "WiFi: down"
        format_quality = "%2d%s"
}

ethernet _first_ {
        format_up = "ETH: %ip (%speed)"
        format_down = "ETH: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "ï¿½ UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

disk "/" {
        format = "%avail"
}

load {
        format = "%1min"
}

memory {
        format = "%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

